FROM debian:stable-slim

RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y \
    apt-transport-https \
    ca-certificates \
    curl \
    dnsutils \
    git \
    gnupg \
    iputils-ping \
    net-tools \
    nodejs \
    openssh-client \
    openssl \
    procps \
    psmisc \
    rsync \
    vim-nox \
    whois && \
    apt-get autoremove -y && \
    rm -rf /var/lib/apt/lists/*

COPY server.js .
EXPOSE 8080

CMD nodejs server.js
